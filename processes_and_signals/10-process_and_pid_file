#!/usr/bin/env bash
# Bash script creates the file /var/run/myscript.pid containing its PID, displays To infinity and beyond indefinitely, displays I hate the kill command when receiving a SIGTERM signal, displays Y U no love me?! when receiving a SIGINT signal and deletes the file /var/run/myscript.pid and terminates itself when receiving a SIGQUIT or SIGTERM signal
PIDFILE="/var/run/myscript.pid"

# Write own PID to the file
echo $$ > "$PIDFILE"

# Cleanup function to delete PID file and exit
cleanup() {
  rm -f "$PIDFILE"
  exit
}

# Trap SIGTERM: print message and cleanup
trap 'echo "I hate the kill command"; cleanup' SIGTERM

# Trap SIGINT (Ctrl+C): print message but do NOT exit
trap 'echo "Y U no love me?!"' SIGINT

# Trap SIGQUIT: cleanup and exit
trap 'cleanup' SIGQUIT

# Infinite loop printing message every 2 seconds
while true; do
  echo "To infinity and beyond"
  sleep 2
done
